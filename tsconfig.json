{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "pages/*": [
        "./web/pages/*"
      ],
      "specs/*": [
        "./web/specs/*"
      ],
      "core/*": [
        "./core/*"
      ]
    },
    "module": "commonjs",
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": false,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "outDir": "typeScript",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@wdio"
    ],
    "types": [
      "node",
      "chai",
      "mocha",
      "@wdio/mocha-framework",
      "webdriverio",
      "@wdio/globals/types",
      "expect-webdriverio",
      "@wdio/allure-reporter"
    ]
  },
  "include": [
    "./**/*.ts",
    "node_modules/@wdio/globals/types.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],

}
